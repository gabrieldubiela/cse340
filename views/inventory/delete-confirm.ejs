<%# Header content %>
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

        <p>Confirm Deletion - The delete is permanent.</p>

            <form id="DeleteInventoryForm" action="/inv/delete" method="post">
                <fieldset>
                    <legend>Vehicle Details</legend>

                    <label for="classificationSelect">Classification:</label>
                    <%- classificationSelect %>

                        <label for="invMake">Make:</label>
                        <input type="text" id="invMake" name="inv_make" required minlength="3" readonly
                            placeholder="Min 3 characters" value="<%= locals.inv_make %>">

                        <label for="invModel">Model:</label>
                        <input type="text" id="invModel" name="inv_model" required minlength="3" readonly
                            placeholder="Min 3 characters" value="<%= locals.inv_model %>">

                        <label for="invYear">Year:</label>
                        <input type="number" id="invYear" name="inv_year" required min="1886" readonly
                            max="<%= new Date().getFullYear() + 1 %>" value="<%= locals.inv_year %>">

                        <label for="invPrice">Price:</label>
                        <input type="number" id="invPrice" name="inv_price" required min="0" step="0.01" readonly
                            placeholder="e.g., 25000.00" value="<%= locals.inv_price %>">
                </fieldset>

                <button type="submit">Delete Vehicle</button>
                <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                    <% } %>>
            </form>